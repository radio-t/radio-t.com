{
  "description": "Сайт подкаста Радио-Т",
  "scripts": {
    "dev": "npm run development",
    "development": "cross-env NODE_ENV=development npx mix",
    "watch": "cross-env NODE_ENV=development npx mix --watch",
    "hot": "cross-env NODE_ENV=development webpack-dev-server --inline --hot",
    "prod": "npm run production",
    "production": "npx mix --production",
    "hugo": "cross-env-shell hugo serve --minify --port ${HUGO_PORT:-1313}",
    "hugo-no-live": "cross-env-shell hugo serve --minify --disableLiveReload --port ${HUGO_PORT:-1313}",
    "start": "cross-env NODE_ENV=development run-p watch hugo",
    "start-turbo": "cross-env NODE_ENV=development cross-env MIX_TURBO=1 run-p watch hugo-no-live",
    "size": "npm run prod && size-limit",
    "prettier": "prettier '**/*.{js,jsx,ts,tsx,scss}' --write",
    "eslint": "eslint '**/*.{js,jsx,ts,tsx}'"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.9.0",
    "@sentry/browser": "^6.2.3",
    "axios": "^0.21.1",
    "axios-extensions": "^3.1.3",
    "bootstrap": "^4.3.1",
    "core-js": "^3.1.4",
    "custom-event-polyfill": "^1.0.7",
    "date-fns": "^2.16.1",
    "imagesloaded": "^4.1.4",
    "intersection-observer": "^0.7.0",
    "light-event-bus": "^1.0.1",
    "lodash": "^4.17.20",
    "lozad": "^1.9.0",
    "mark.js": "^8.11.1",
    "preact": "^10.5.9",
    "quicklink": "^1.0.0",
    "scriptjs": "^2.5.9",
    "smooth-scroll": "^16.1.0",
    "smoothscroll-polyfill": "^0.4.4",
    "stimulus": "^1.1.1",
    "turbolinks": "^5.2.0",
    "visibilityjs": "^2.0.2"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.12.10",
    "@size-limit/file": "^4.9.1",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.13.0",
    "babel-preset-preact": "^2.0.0",
    "debug": "^4.3.1",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-react": "^7.22.0",
    "laravel-mix": "^6.0.13",
    "prettier": "^2.2.1",
    "size-limit": "^4.10.1",
    "ts-loader": "^8.0.18",
    "typescript": "^4.2.3",
    "webpack": "^5.27.1",
    "webpack-bundle-analyzer": "^3.9.0",
    "browser-sync": "^2.26.7",
    "browser-sync-webpack-plugin": "^2.2.2",
    "cross-env": "^5.2.0",
    "csso-webpack-plugin": "^2.0.0-beta.1",
    "node-sass": "^4.14.1",
    "npm-check": "^5.9.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.8",
    "resolve-url-loader": "^3.1.2",
    "sass": "^1.32.8",
    "sass-loader": "^10.1.1",
    "webpack-cli": "^4.5.0"
  }
}
